.container.well
  %h3
  = form_for user, as: :user, url: add_to_user_group_user_path(user), html: { id: 'add_to_group' } do |f|
    = f.select :user_group_ids, [], {}, class: 'select-group', style: 'width: 100%'
    = f.submit  t('users.add_to_group'), class: 'form-control'

%ul
  - user.user_groups.each do |group|
    %li= group.group_name

:coffee
  handler = new HRDepartment.Autocomplete('.select-group', "#{user_groups_path}", 'group_name_cont')
  handler.init()
